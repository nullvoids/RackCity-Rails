<div id="loginmodal" class="modal hidden">

  <button class="simplemodal-close">X</button>
  <h2 class="modal-title">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'pure-form'}) do |f| %>
  <div class="field">
   <%= f.email_field :email, autofocus: true %>
 </div>

 <div class="field">
   <%= f.password_field :password, autocomplete: "off" %>
 </div>

 <% if devise_mapping.rememberable? -%>
 <div class="field">
   <%= f.check_box :remember_me %>
   <%= f.label :remember_me %>
 </div>
 <% end -%>

 <div class="submit-container">
   <%= f.submit "Log In" %>
 </div>
 <% end %>



</div>